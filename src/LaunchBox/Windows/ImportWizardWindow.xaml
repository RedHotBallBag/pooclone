<Window x:Class="LaunchBox.Windows.ImportWizardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Import ROM Files - LaunchBox"
        Height="600" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E1E">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Import ROM Files" FontSize="24" FontWeight="Bold"
                   Foreground="White" Margin="0,0,0,20"/>

        <!-- Import Area -->
        <Border Grid.Row="1" BorderBrush="#007ACC" BorderThickness="2"
                Background="#252526" CornerRadius="5"
                AllowDrop="True"
                Drop="ImportArea_Drop"
                DragOver="ImportArea_DragOver">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Drop Zone Instructions -->
                <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center"
                           Margin="20" x:Name="DropInstructions">
                    <TextBlock Text="ðŸ“ Drag &amp; Drop ROM Files Here"
                              FontSize="20" Foreground="#AAAAAA"
                              HorizontalAlignment="Center" Margin="0,40,0,10"/>
                    <TextBlock Text="or" FontSize="14" Foreground="#888888"
                              HorizontalAlignment="Center" Margin="0,10"/>
                    <Button Content="Browse for Files..." Click="BrowseFiles_Click"
                           Padding="20,10" Margin="0,10" HorizontalAlignment="Center"/>
                    <Button Content="Browse for Folder..." Click="BrowseFolder_Click"
                           Padding="20,10" Margin="0,5" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Files List -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10">
                    <ItemsControl x:Name="FilesListBox">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#2D2D30" Margin="5" Padding="10" CornerRadius="3">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="200"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding FileName}" Foreground="White" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding FilePath}" Foreground="#888888" FontSize="11"/>
                                        </StackPanel>

                                        <ComboBox Grid.Column="1" ItemsSource="{Binding Platforms}"
                                                 SelectedItem="{Binding SelectedPlatform}"
                                                 DisplayMemberPath="Name" Margin="10,0"/>

                                        <TextBlock Grid.Column="2" Text="{Binding Status}"
                                                  Foreground="#00FF00" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Platform Selection -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,20,0,0">
            <TextBlock Text="Default Platform:" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox x:Name="DefaultPlatformComboBox" Width="300" DisplayMemberPath="Name"/>
            <CheckBox x:Name="AutoDetectPlatformCheckBox" Content="Auto-detect platform from file"
                     IsChecked="True" Foreground="White" VerticalAlignment="Center" Margin="20,0,0,0"/>
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <TextBlock x:Name="StatusText" VerticalAlignment="Center" Foreground="#AAAAAA" Margin="0,0,20,0"/>
            <Button Content="Import" Click="Import_Click" Padding="20,8" Margin="0,0,10,0" IsEnabled="False" x:Name="ImportButton"/>
            <Button Content="Cancel" Click="Cancel_Click" Padding="20,8"/>
        </StackPanel>
    </Grid>
</Window>
