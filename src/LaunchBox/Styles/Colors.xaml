<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:LaunchBox.Converters">

    <!-- Converters -->
    <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    <converters:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter"/>
    <converters:FavoriteButtonTextConverter x:Key="FavoriteButtonTextConverter"/>
    <converters:ViewModeToVisibilityConverter x:Key="ViewModeToVisibilityConverter"/>

    <!-- Color Brushes -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#252526"/>
    <SolidColorBrush x:Key="TertiaryBackgroundBrush" Color="#2D2D30"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#007ACC"/>
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="MutedTextBrush" Color="#888888"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#3E3E42"/>

</ResourceDictionary>
